<div>
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <p>The task is completed: <%= @task.completed %></p>

  <%= link_to 'Back to list', tasks_path %>
  <%= link_to "Edit", edit_task_path(@task) %>
  <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</div>
